<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="com.tacs.deathlist.endpoint" />

    <bean id="props" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:com/tacs/deathlist/properties/deathlist.properties"/>
    </bean>

    <bean id="objetifyService" class="com.tacs.deathlist.service.ObjetifyService" />

    <bean id="usuarios" class="com.tacs.deathlist.dao.GaeUsuariosDao" />
    <!--<bean id="usuarios" class="com.tacs.deathlist.dao.InMemoryUsuariosDao" />-->
    <bean id="listas" class="com.tacs.deathlist.dao.GaeListasDao" />
    <!--<bean id="listas" class="com.tacs.deathlist.dao.InMemoryListasDao" />-->

    <bean id="stubUserService" class="com.tacs.deathlist.service.StubUserService" />

    <!--cache configuration-->

    <bean id="myCache" class="net.sf.ehcache.Cache">
        <constructor-arg name="name" value="facebookUsersCache"/>
        <constructor-arg name="maxElementsInMemory" value="${cache.maxElementsInMemory}"/>
        <constructor-arg name="overflowToDisk" value="false"/>
        <constructor-arg name="eternal" value="false"/>
        <constructor-arg name="timeToLiveSeconds" value="${cache.timeToLiveSeconds}"/>
        <constructor-arg name="timeToIdleSeconds" value="${cache.timeToIdleSeconds}"/>
    </bean>

</beans>